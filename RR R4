#include <SoftwareSerial.h>
#define RxD 2
#define TxD 3
SoftwareSerial mySerial(RxD,TxD); // RX, TX
int val = 0; //value for storing moisture value 
int soilPin = A0;//Declare a variable for the soil moisture sensor 
int soilPower = 7;//Variable for Soil moisture Power
String SerialGET = "";
String r4mac;

void setup() {
    Serial.begin(9600);
    pinMode(RxD, INPUT);
    pinMode(TxD, OUTPUT);
    mySerial.begin(9600);
    r4mac = String();
    pinMode(soilPower, OUTPUT);//Set D7 as an OUTPUT
    digitalWrite(soilPower, LOW);//Set to LOW so no power is flowing through the sensor
}
 
void loop() {      
    if  (mySerial.available()) {                   //ฝั่งรับ    
        char incoming  = mySerial.read();
        SerialGET += incoming;
        if (incoming == '\n'){
          SerialGET.trim();             
          if(SerialGET.substring(0,1) == "3" && SerialGET.substring(1,2) == "4") {
            Serial.print("Get :");
            Serial.println(SerialGET);
            String sensor = "-";
            int soil = readSoil();
            r4mac = String(414 + sensor + soil);
            delay(1000);
            mySerial.print(r4mac);
            mySerial.print('\n');
            Serial.print("Send : ");
            Serial.println(r4mac);
            Serial.println("-----------------------");
          }else if (SerialGET.substring(0,1) == "3"){  
           if(SerialGET.substring(1,2) == "1") {}
              else {
              SerialGET.setCharAt(0,'4');     // ส่งข้อมูลไป -->
              delay(1000);
              mySerial.print(SerialGET);
              mySerial.print('\n');
              Serial.print("Forword :");
              Serial.println(SerialGET);
              }
          }
          if (SerialGET.substring(0,1) == "5"){   
            if(SerialGET.substring(1,2) == "1"){
              SerialGET.setCharAt(0,'4');     // ส่งข้อมูลกลับ <--
              delay(1000);
              mySerial.print(SerialGET);
              mySerial.print('\n');
              Serial.print("Forword :");
              Serial.println(SerialGET);
              }
            }
SerialGET = "";
        }
        }      
}

int readSoil()
{
    digitalWrite(soilPower, HIGH);//turn D7 "On"
    delay(10);//wait 10 milliseconds 
    val = analogRead(soilPin);//Read the SIG value form sensor 
    digitalWrite(soilPower, LOW);//turn D7 "Off"
    return val;//send current moisture value
}
