#include <SoftwareSerial.h>
#define RxD 2
#define TxD 3

SoftwareSerial mySerial(RxD,TxD); // RX, TX

int val = 0; //value for storing moisture value 
int soilPin = A0;//Declare a variable for the soil moisture sensor 
int soilPower = 7;//Variable for Soil moisture Power
String SerialGET = "";
unsigned long previousMillis=0;
int interval = 4000;
String r1mac;
int i=2 ;
bool a = true;
bool Status_2 = true;
bool Status_3 = true;
bool Status_4 = true;
bool Status_5 = true;
int loss =0;
char restart = '0';

void setup() {
    Serial.begin(9600);
    pinMode(RxD, INPUT);
    pinMode(TxD, OUTPUT);
    mySerial.begin(9600);
    r1mac = String();
    pinMode(soilPower, OUTPUT);//Set D7 as an OUTPUT
    digitalWrite(soilPower, LOW);//Set to LOW so no power is flowing through the sensor 
}
 
void loop() {
    if(i>5){i=2;}
    if(!Status_2){i=2;  a=true; loss++;}
    if(!Status_3){i=3;  a=true; loss++;}
    if(!Status_4){i=4;  a=true; loss++;}
    if(!Status_5){i=5;  a=true; loss++;}

    if(loss >=5){
      Serial.print("System Error"); 
      delay(500);
      Serial.print('.');
      delay(500);
      Serial.print('.');
      delay(500);
      Serial.print('.');
      Serial.println();
      Serial.print("Checking");
      delay(500);
      Serial.print('.');
      delay(500);
      Serial.print('.');
      delay(500);
      Serial.print('.');
      Serial.println();
      Status_2 = checking2();
      if(Status_2){
        Serial.println("Status_2 : Online");
        }else{
          Serial.println("Status_2 : Offline");}
      Status_3 =checking3();
      if(Status_3){
        Serial.println("Status_3 : Online");
        }else{
          Serial.println("Status_3 : Offline");}
      Status_4 =checking4();
      if(Status_4){
        Serial.println("Status_4: Online");
        }else{
          Serial.println("Status_4 : Offline");}
      while(restart = '0'){
        if (Serial.available()){
          char restart = Serial.read(); 
          }
        }
        loss = 0;
        i = 2;
      }
    if(a){
    switch(i){
          case 2 :
                  Serial.println("Send 12");
                  delay(1000);
                  mySerial.print("12");
                  mySerial.print('\n');
                  for(int q=0;q<2;q++){
                  Serial.print('.');
                  delay(1000);
                  }
                  Serial.println(); 
                  a = false;
                  Status_2 =false;
                  break;
          case 3 :
                  Serial.println("Send 13");
                  delay(1000);
                  mySerial.print("13");
                  mySerial.print('\n');
                  a = false;
                  Status_3 =false;
                  for(int q=0;q<5;q++){
                  Serial.print('.');
                  delay(1000);
                  }
                  Serial.println(); 
                  break; 
          case 4 :
                  Serial.println("Send 14");
                  delay(1000);
                  mySerial.print("14");
                  mySerial.print('\n');
                  a = false;
                  Status_4 =false;
                  for(int q=0;q<7;q++){
                  Serial.print('.');
                  delay(1000);
                  }
                  Serial.println(); 
                  break;
         case 5 :
                  Serial.println("Send 15");
                  delay(1000);
                  mySerial.print("15");
                  mySerial.print('\n');
                  a = false;
                  Status_5 =false;
                  for(int q=0;q<7;q++){
                  Serial.print('.');
                  delay(1000);
                  }
                  Serial.println(); 
                  break;  
    }          
    }
    while  (mySerial.available()) {                   //ฝั่งรับ    
        char incoming  = mySerial.read();
        SerialGET += incoming;
        if(incoming == '\n'){
          SerialGET.trim();             
          if(SerialGET.substring(0,1) == "2" && SerialGET.substring(1,2) == "1") {
            SerialGET.remove(0,2);
            if(SerialGET.substring(0,1) == "2"){ Status_2 = true; loss=0;}
            if(SerialGET.substring(0,1) == "3"){ Status_3 = true; loss=0;}
            if(SerialGET.substring(0,1) == "4"){ Status_4 = true; loss=0;}
            if(SerialGET.substring(0,1) == "5"){ Status_5 = true; loss=0;}
            Serial.print("Get :");
            Serial.println(SerialGET);
            Serial.println("Active !!");
            Serial.println("-----------------------");
            Serial.println();
            a = true;
            i++;
            for(int q=0;q<3;q++){
            Serial.print('.');
            delay(1000);  
              }
            Serial.println(); 
          }
SerialGET = "";
        }
        }
}
int readSoil()
{
    digitalWrite(soilPower, HIGH);//turn D7 "On"
    delay(10);//wait 10 milliseconds 
    val = analogRead(soilPin);//Read the SIG value form sensor 
    digitalWrite(soilPower, LOW);//turn D7 "Off"
    return val;//send current moisture value
}
bool checking2(){
    bool Status_2 = false;
    delay(1000);
    mySerial.print("12");
    mySerial.print('\n');
    for(int q=0;q<5;q++){
            Serial.print('.');
            delay(1000);  
              }
            Serial.println();
    while  (mySerial.available()) {                   //ฝั่งรับ    
      char incoming  = mySerial.read();
      SerialGET += incoming;
      if(incoming == '\n'){
        SerialGET.trim();             
        if(SerialGET.substring(0,1) == "2" && SerialGET.substring(1,2) == "1") {
          SerialGET.remove(0,2);
          if(SerialGET.substring(0,1) == "2"){ Status_2 = true; Serial.println("OK");}
        }
        SerialGET = "";
        }
    }
   return Status_2;
  }
bool checking3(){
    bool Status_3 = false;
    delay(1000);
    mySerial.print("13");
    mySerial.print('\n');
    for(int q=0;q<8;q++){
            Serial.print('.');
            delay(1200);  
              }
            Serial.println();
    while  (mySerial.available()) {                   //ฝั่งรับ    
      char incoming  = mySerial.read();
      SerialGET += incoming;
      if(incoming == '\n'){
        SerialGET.trim();             
        if(SerialGET.substring(0,1) == "2" && SerialGET.substring(1,2) == "1") {
          SerialGET.remove(0,2);
          if(SerialGET.substring(0,1) == "3"){ Status_3 = true; Serial.println("OK");}
        }  
        SerialGET = "";
        }
    }
   return Status_3;
  }
bool checking4(){
    bool Status_4 = false;
    delay(1000);
    mySerial.print("14");
    mySerial.print('\n');
    for(int q=0;q<10;q++){
            Serial.print('.');
            delay(1200);  
              }
            Serial.println();
    while  (mySerial.available()) {                   //ฝั่งรับ    
      char incoming  = mySerial.read();
      SerialGET += incoming;
      if(incoming == '\n'){
        SerialGET.trim();             
        if(SerialGET.substring(0,1) == "2" && SerialGET.substring(1,2) == "1") {
          SerialGET.remove(0,2);
          if(SerialGET.substring(0,1) == "4"){ Status_4 = true; Serial.println("OK");}
        }
        SerialGET = "";
        }
    }
   return Status_4;
  }
